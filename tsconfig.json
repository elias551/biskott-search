{
    "compilerOptions": {
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "target": "es2017",
        "module": "commonjs",
        "esModuleInterop": true,
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",
        "typeRoots": [
            "./src/@types"
        ]
    },
    "include": [
        "src/**/*"
    ],
    "exclude": ["node_modules/"]
}